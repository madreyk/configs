# Please see https://i3wm.org/docs/userguide.html for a complete reference!
# QWERTY layout
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
# $mod = Win
set $mod Mod4
set $brow qutebrowser
set $term urxvt
new_window pixel 1

# FX
bindsym Print exec sh ~/.auto/sc.sh
bindsym Ctrl+Print exec sh ~/.auto/sc1.sh
bindsym KP_End exec betterlockscreen -l -t
bindsym $mod+t exec $term

# AutoStart
exec --no-startup-id nitrogen --restore
exec --no-startup-id devmon
exec --no-startup-id unclutter --idle 1 --ignore-scrolling
exec --no-startup-id setxkbmap "uss,rus" "winkeys" "grp:alt_shift_toggle,grp_led:scroll"
exec --no-startup-id polybar top
exec --no-startup-id brightnessctl s 4882

# Moving
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+p split v
bindsym $mod+Shift+p split h

for_window [instance="dragon-drag-and-drop"] sticky toggle
for_window [instance="mpv"] sticky toggle
for_window [instance="urxvt"] border pixel 1
#for_window [instance="urxvt"] resize set 100 100

# Windows
bindsym $mod+q kill

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+y floating toggle

client.focused          #000000 #000000 #000000 #000000 #000000
client.focused_inactive #000000 #000000 #000000 #000000 #000000
client.unfocused        #000000 #000000 #000000 #000000 #000000
client.urgent           #000000 #000000 #000000 #000000 #000000
client.background       #000000

assign [class="^qutebrowser$"] → 1
assign [class="^URxvt$"] → 2
assign [class="^TelegramDesktop$"] → 3
assign [class="^discord$"] → 3
assign [class="^tutanota-desktop$"] → 3

# gaps [inner|outer|horizontal|vertical|top|left|bottom|right] <px>
# gaps inner 7
# smart_gaps on
# smart_borders no_gaps
# hide_edge_borders smart_no_gaps

# Other
font pango:monospace 12
bindsym $mod+z exec --no-startup-id rofi -show run
bindsym $mod+F11 fullscreen toggle
floating_modifier $mod



# Use pactl to adjust volume in PulseAudio.
#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
#bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym	F10 exec pactl set-sink-mute 0 Muted
bindsym F11 exec pactl set-sink-volume 0 -10%
bindsym F12 exec pactl set-sink-volume 0 +10%

bindsym $mod+space focus mode_toggle

# focus the parent container
#bindsym $mod+Shift+a focus parent

# move the currently focused window to the scratchpad
bindsym $mod+Shift+a move scratchpad
bindsym $mod+a scratchpad show
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
bindsym $mod+s mode "open"
mode "open" {
	bindsym w exec i3-msg exec sh ~/.auto/tr.sh; workspace 1; mode default
	bindsym e exec i3-msg exec sh ~/.auto/mpv.sh; mode default
	bindsym q exec i3-msg exec sh ~/.auto/sx.sh; workspace 1; mode default

	bindsym z exec i3-msg exec $brow youtube.com; workspace 1; mode default
	bindsym x exec i3-msg exec $brow linux.org.ru; workspace 1; mode default
	bindsym c exec i3-msg exec $brow github.com; workspace 1; mode default

	bindsym 1 exec i3-msg exec $brow; workspace 1; mode default
    bindsym 2 exec i3-msg workspace 2; mode add2
    bindsym 3 exec i3-msg workspace 3; mode add3
    bindsym 4 exec i3-msg workspace 4; mode add4
    bindsym 0 exec i3-msg exec keepassxc; workspace 10; mode default

    bindsym $mod+r restart
	bindsym Escape mode "default"
	}
mode "add2" {
    bindsym t exec $term
    bindsym e exec $term -e vim ~
    bindsym s exec $term -e sncli

    bindsym $mod+r restart
    bindsym Escape mode "default"
}

mode "add3" {
    bindsym t mode add31
    bindsym d exec discord; mode default
    
    bindsym $mod+r restart
    bindsym Escape mode "default"
    }
mode "add31" {
    bindsym e exec telegram-desktop; mode default
    bindsym u exec tutanota-desktop; mode default

    bindsym $mod+r restart
    bindsym Escape mode "default"
    }
mode "add4" {
    bindsym f exec freetube; mode "default"
	bindsym m exec minecraft-launcher; mode "default"
    bindsym Escape mode "default"
    bindsym r "restart"
    
}
mode "resize" {
	bindsym Left        resize shrink width 5 px or 5 ppt
	bindsym Down        resize grow height 5 px or 5 ppt
	bindsym Up          resize shrink height 5 px or 5 ppt
	bindsym Right       resize grow width 5 px or 5 ppt

	# back to normal: Enter or Escape or $mod+r
	# bindsym Return mode "default"
	bindsym Escape mode "default"
	# bindsym $mod+x mode "default"
	# bindsym $mod+x mode "default"
	# bindsym $mod+x mode "default"
}

bindsym $mod+x mode "resize"

bindsym KP_Left        resize shrink width 5 px or 5 ppt
bindsym KP_Down        resize grow height 5 px or 5 ppt
bindsym KP_Up          resize shrink height 5 px or 5 ppt
bindsym KP_Right       resize grow width 5 px or 5 ppt

